<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OlahragaActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"
            android:scaleType="fitXY"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olahraga"
            android:layout_marginLeft="16dp"
            android:textStyle="bold"
            android:textColor="@color/mycl"
            android:textSize="30sp"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iolahraga"
                    android:layout_width="410dp"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/oolahraga"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp">
                </ImageView>
                <ImageView
                    android:id="@+id/obadminton"
                    android:layout_width="377dp"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/obadminton"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp">
                </ImageView>
                <ImageView
                    android:id="@+id/orenang"
                    android:layout_width="377dp"
                    android:layout_height="250dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/orenang"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp">
                </ImageView>


            </LinearLayout>
        </HorizontalScrollView>

    </ScrollView>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/oljoging"
                    android:layout_width="70dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="16dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/oljoging"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                </ImageView>
                <ImageView
                    android:id="@+id/olrenang"
                    android:layout_width="70dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/olrenang"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                </ImageView>
                <ImageView
                    android:id="@+id/olbersepeda"
                    android:layout_width="90dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/olbersepeda"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="8dp">
                </ImageView>
                <ImageView
                    android:id="@+id/olbad"
                    android:layout_width="80dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/olbad"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                </ImageView>
                <ImageView
                    android:id="@+id/olsepak"
                    android:layout_width="80dp"
                    android:layout_height="105dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/olsepak"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">
                </ImageView>




            </LinearLayout>
        </HorizontalScrollView>

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="16dp"
        android:text="Aktivitas Hari ini"
        android:textSize="20sp"
        android:textColor="@color/mycl"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:src="@drawable/steps"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/kalori"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:src="@drawable/bepm"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Recommend"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/mycl"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/rejoging"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:layout_marginLeft="16dp"
                    android:scaleType="fitXY"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:src="@drawable/rejoging">

                </ImageView>

                <ImageView
                    android:id="@+id/resepak"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="16dp"

                    android:src="@drawable/resepak"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp">
                </ImageView>
                <ImageView
                    android:id="@+id/rerenang"
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/rerenang"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp">
                </ImageView>




            </LinearLayout>
        </HorizontalScrollView>

    </ScrollView>









</LinearLayout>